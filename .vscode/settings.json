{
  "editor.formatOnSave": true, // 保存時に自動フォーマット
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettierをデフォルトフォーマッターに設定
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ], // ESLintを有効化するファイルタイプ
  "debug.showInStatusBar": "always", // ステータスバーにESLintの状態を表示
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true
}
